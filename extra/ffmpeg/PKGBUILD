# Maintainer : Ionut Biru <ibiru@archlinux.org>
# Contributor: Tom Newsom <Jeepster@gmx.co.uk>
# Contributor: Paul Mattal <paul@archlinux.org>

pkgname=ffmpeg
pkgver=1.0.1
pkgrel=1
epoch=1
pkgdesc="Complete and free Internet live audio and video broadcasting solution for Linux/Unix"
arch=('i686' 'x86_64')
url="http://ffmpeg.org/"
license=('GPL')
depends=(alsa-lib gsm lame libpulse libtheora libva libvorbis libvpx opencore-amr openjpeg rtmpdump schroedinger sdl speex v4l-utils x264 xvidcore zlib)
depends=(alsa-lib gsm lame          libtheora libva libvorbis libvpx opencore-amr openjpeg rtmpdump schroedinger sdl speex           x264 xvidcore)
makedepends=('yasm' 'git' 'libvdpau' 'gmake' 'perl')
source=(http://ffmpeg.org/releases/$pkgname-$pkgver.tar.bz2
        patch-configure
        patch-libavformat-udp.c
        )
md5sums=('dbbb88ce5525dea22b24aaa098a9bcc2'
         '1751f81ce815674c163c25444bb22922'
         'cc370b2b72b6e3b94f516990cbc0b89e')

build() {
  cd $pkgname-$pkgver
  for i in patch-configure \
           patch-libavformat-udp.c
  do
    msg "patch $i"
    patch -p0 -i "${srcdir}/$i"
  done

  sed -i '' -e 's|$$(LIBDIR)/pkgconfig|$(PREFIX)/libdata/pkgconfig|' library.mak
  sed -i '' -e 's|/etc/ffserver.conf|${PREFIX}/etc/ffserver.conf|' ffserver.c
  sed -i '' -E \
    -e "s|(EXTRALIBS[[:space:]]*=)|\1-L/usr/local/lib |g" \
    -e 's|%%LOCALBASE%%|/usr/local}|g' \
    configure
  sed -i '' -e 's|-ldl||;' configure
  sed -i '' -e 's|/usr/bin/perl|/usr/local/bin/perl}|g' doc/texi2pod.pl

  export CPPFLAGS="$CPPFLAGS -I/usr/local/include"
  export LDFLAGS="$LDFLAGS -L/usr/local/lib"
  export PATH="${PATH}:/usr/local/bin/core_perl"
  ./configure \
    --prefix=/usr/local \
    --enable-libmp3lame \
    --enable-libvorbis \
    --enable-libxvid \
    --enable-libx264 \
    --enable-libvpx \
    --enable-libtheora \
    --enable-libgsm \
    --enable-libspeex \
    --enable-postproc \
    --enable-shared \
    --enable-x11grab \
    --enable-libopencore_amrnb \
    --enable-libopencore_amrwb \
    --enable-libschroedinger \
    --enable-libopenjpeg \
    --enable-librtmp \
    --disable-libpulse \
    --disable-libv4l2 \
    --enable-gpl \
    --enable-version3 \
    --enable-runtime-cpudetect \
    --disable-debug \
    --disable-static

  gmake
  gmake tools/qt-faststart
  gmake doc/ff{mpeg,play,server}.1
}

package() {
  cd $pkgname-$pkgver
  gmake DESTDIR="$pkgdir" install install-man
  install -dm755 "$pkgdir/usr/local/bin"
  install -m755 tools/qt-faststart "$pkgdir/usr/local/bin/qt-faststart"
}

