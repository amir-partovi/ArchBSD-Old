infodir=usr/share/info
infofile=texi2html.info.gz

post_install() {
  [ -x usr/bin/install-info ] || return 0
  install-info $infodir/$infofile $infodir/dir 2> /dev/null
}

post_upgrade() {
  post_install $1
}

pre_remove() {
  [ -x usr/bin/install-info ] || return 0
  install-info --delete $infodir/$infofile $infodir/dir 2> /dev/null
}
