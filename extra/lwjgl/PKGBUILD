pkgname=lwjgl
pkgver=2.9.0
pkgrel=1
pkgdesc='Lightweight Java Game Library - for use in game projects in Java.'
arch=(any)
url='http://lwjgl.org/'
license=('BSD')
options=(!strip)
depends=('junit' 'jinput')
source=(http://downloads.sourceforge.net/java-game-lib/Official%20Releases/LWJGL%202.9.0/lwjgl-source-$pkgver.zip
        http://heanet.dl.sourceforge.net/project/java-game-lib/Official%20Releases/LWJGL%202.9.0/lwjgl-$pkgver.zip
        patch-build.xml
        patch-platform_build__bsd_ant__build.xml)
md5sums=('6ebb2c19211ba87bc8850386fdd17cb6'
         '00a5cdac75d5d15a90ce4c72083b39b1'
         '64d6e68ac11efef1d33b5297f2fb2e7c'
         'ff661e1ca87f884a9c80679c0810f914')
sha1sums=('b091805236a9ad3b026359b53d3bc0c23fe1bb87'
          '751974616e37851430fa5d7c90939471ffccd976'
          '5d48d21b7889fed3610f44d34cf691d79e75154f'
          '48d51afcafdc941bfa7aa02f94aa4da219b9ecf6')

build() {
cd ${srcdir}

patch -p0 -i ${srcdir}/patch-build.xml

export CLASSPATH=/usr/share/java/jutils.jar:/usr/share/java/jinput.jar:$srcdir/$pkgname-$pkgver/jar
ant jars
ant compile_native
}
package() {
  install -dm755 ${pkgdir}/usr/share/java
}
