post_install(){
	install-info --quiet /usr/info/sed.info.gz /usr/info/dir
}

pre_remove() {
	install-info --quiet --delete /usr/info/sed.info.gz /usr/info/dir
	
	if [ -f /usr/info/dir ]; then 
		if sed -e '1,/Menu:/d' /usr/info/dir | grep -q '^[*] '; then 
			true; 
		else 
			rm /usr/info/dir; 
		fi; 
	fi	
}
