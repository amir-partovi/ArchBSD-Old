# Maintainer: 
# Contributer: Jason Chu <jason@archlinux.org>

pkgname=speex
pkgver=1.2rc1
pkgrel=2
pkgdesc="A free codec for free speech"
arch=('i686' 'x86_64')
url="http://www.speex.org/"
license=('BSD')
depends=('libogg')
source=(http://downloads.us.xiph.org/releases/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('c4438b22c08e5811ff10e2b06ee9b9ae')

build() {
  cd $srcdir/speex-$pkgver

  sed -i '' -e '/^pkgconfigdir/s|\$(libdir)|$(libdir)data|' Makefile.in
  ./configure --prefix=/usr/local \
              --sysconfdir=/usr/local/etc \
              --localstatedir=/var \
              --with-ogg-dir=/usr/local
  make
}

package() {
  cd $srcdir/speex-$pkgver
  make -j1 DESTDIR=$startdir/pkg install

  install -dm755 $startdir/pkg/usr/local/share/licenses/$pkgname
  install -m644 COPYING $startdir/pkg/usr/local/share/licenses/$pkgname/LICENSE
}
