# Maintainer: Paul Mattal <paul@archlinux.org>
# Contributor: Tom Newsom <Jeepster@gmx.co.uk>

pkgname=enscript
pkgver=1.6.5.2
pkgrel=2
pkgdesc="Convert ASCII files to PostScript suitable for printing"
arch=('i686' 'x86_64')
backup=('etc/enscript/enscript.cfg')
license=('GPL2')
source=(ftp://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('c1d2a0d4b44ca30634742b299881b0e2')
url="http://git.savannah.gnu.org/cgit/enscript.git"

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr/local --sysconfdir=/usr/local/etc/enscript --mandir=/usr/local/man \
    --infodir=/usr/local/info
  make
}

check() {
  cd $srcdir/$pkgname-$pkgver
  make check
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make prefix=$pkgdir/usr/local \
    sysconfdir=$pkgdir/usr/local/etc/enscript mandir=$pkgdir/usr/local/man \
    infodir=$pkgdir/usr/local/info install
}

# vim: ts=2 sw=2 et ft=sh
