pkgname=lxde-common
pkgver=0.5.5
pkgrel=3
pkgdesc='Common files of the LXDE Desktop'
arch=('any')
url='http://lxde.org/'
license=('GPL2')
groups=('lxde')
backup=(usr/local/etc/xdg/lxsession/LXDE/desktop.conf
        usr/local/etc/xdg/lxsession/LXDE/autostart)
depends=('libx11' 'glib2' 'lxde-icon-theme' 'lxsession')
makedepends=('automake')
source=(http://downloads.sourceforge.net/lxde/${pkgname}-${pkgver}.tar.gz
        patch-Makefile-am
	patch-Makefile-in
	patch-configure
	patch-configure-ac)
md5sums=('e51a6b2a815a89fda1f497b509465a97'
         '49e0ffa5f42f2d9bc479f3ac7543a3c6'
         '4773071bdcd77cff6c37cef43ab7313f'
         '69aac43a0571e0ed5176223ab01e915f'
         '74dafb4ece61fba8a688b310b0bbb061')

build() {
    cd $srcdir/$pkgname-$pkgver
	
    patch -p0 -i ${srcdir}/patch-Makefile-am
    patch -p0 -i ${srcdir}/patch-Makefile-in
    patch -p0 -i ${srcdir}/patch-configure
    patch -p0 -i ${srcdir}/patch-configure-ac

    ./configure --prefix=/usr/local \
		CPPFLAGS="-I/usr/local/include" \
		LDFLAGS="-L/usr/local/lib" \
		GMSGFMT="/usr/local/bin/msgfmt" \
		--with-xsession-path=/usr/local/share/xsessions \
		--with-xdg-path=/usr/local/share/applications \
		--sysconfdir=/usr/local/etc \
		--datadir=/usr/local/share
    gmake
}

package() {
    cd $srcdir/$pkgname-$pkgver
    make DESTDIR=$pkgdir install
    install -dm755 $pkgdir/usr/local/share/applications/
    install -m644 lxde-logout.desktop $pkgdir/usr/local/share/applications/
}
