# $Id$
# Maintainer: Allan McRae <allan@archlinux.org>

# toolchain build order: linux-api-headers->glibc->binutils->gcc->binutils->glibc
# NOTE: libtool requires rebuilt with each new gcc version

pkgname=('gcc' 'gcc-libs' 'gcc-fortran' 'gcc-objc')
pkgver=4.8.0
pkgrel=1
pkgdesc="The GNU Compiler Collection"
arch=('i686' 'x86_64')
license=('GPL' 'LGPL' 'FDL' 'custom')
url="http://gcc.gnu.org"
makedepends=('binutils>=2.23' 'libmpc' 'cloog' 'ppl')
options=('!libtool' '!emptydirs')
source=(ftp://gcc.gnu.org/pub/gcc/releases/gcc-${pkgver}/gcc-${pkgver}.tar.bz2)
md5sums=('e6040024eb9e761c3bea348d1fa5abb0')


if [ -n "${_snapshot}" ]; then
  _basedir="${srcdir}/gcc-${_snapshot}"
else
  _basedir="${srcdir}/gcc-${pkgver}"
fi

build() {
  cd ${_basedir}

  # Do not install libiberty
  gsed -i 's/install_to_$(INSTALL_DEST) //' libiberty/Makefile.in

  echo ${pkgver} > gcc/BASE-VER

  # using -pipe causes spurious test-suite failures
  # http://gcc.gnu.org/bugzilla/show_bug.cgi?id=48565
  CFLAGS=${CFLAGS/-pipe/}
  CXXFLAGS=${CXXFLAGS/-pipe/}

  cd ${srcdir}/gcc-${pkgver}
  contrib/gcc_update --touch
  rm -rf -f gcc/*/*.info*
   
  if [[ "$CARCH" == "i686" ]]; then
      _CARCH=i386
  else
      _CARCH=x86_64
fi

  cd ${srcdir}/
  mkdir gcc-build && cd gcc-build

  ${_basedir}/configure --prefix=/usr \
      --libdir=/usr/lib --libexecdir=/usr/lib \
      --mandir=/usr/share/man --infodir=/usr/share/info \
      --with-bugurl=https://bugs.archlinux.org/ \
      --enable-languages=c,c++,objc,fortran \
      --disable-nls --with-as=/usr/bin/as \
      --with-gmp=/usr --with-ld=/usr/bin/ld \
      --with-libiconv-prefix=/usr \
      --with-pkgversion="ArchBSD Package Collection" \
      --with-system-zlib --disable-libgcj \
      --enable-cloog-backend=isl --disable-cloog-version-check

  gmake
}

check() {
  cd ${srcdir}/gcc-build

  # increase stack size to prevent test failures
  # http://gcc.gnu.org/bugzilla/show_bug.cgi?id=31827
  ulimit -s 32768

  # do not abort on error as some are "expected"
  gmake -k check || true
  ${_basedir}/contrib/test_summary
}

package_gcc-libs()
{
  pkgdesc="Runtime libraries shipped by GCC"
  groups=('base')
  install=gcc-libs.install

  cd ${srcdir}/gcc-build
  gmake -j1 -C ${_CARCH}-unknown-freebsd9.1/libgcc DESTDIR=${pkgdir} install-shared
  for lib in libmudflap libgomp libstdc++-v3/src libitm; do
    gmake -j1 -C ${_CARCH}-unknown-freebsd9.1/$lib DESTDIR=${pkgdir} install-toolexeclibLTLIBRARIES
  done
  gmake -j1 -C ${_CARCH}-unknown-freebsd9.1/libstdc++-v3/po DESTDIR=${pkgdir} install
  gmake -j1 -C ${_CARCH}-unknown-freebsd9.1/libgomp DESTDIR=${pkgdir} install-info
  gmake -j1 -C ${_CARCH}-unknown-freebsd9.1/libitm DESTDIR=${pkgdir} install-info

  gmake -j1 DESTDIR=${pkgdir} install-target-libquadmath  
  gmake -j1 DESTDIR=${pkgdir} install-target-libgfortran
  gmake -j1 DESTDIR=${pkgdir} install-target-libobjc

  # remove unnecessary files installed by install-target-{libquadmath,libgfortran,libobjc}
  rm -r ${pkgdir}/usr/lib/{gcc/,libgfortran.spec}

  # remove static libraries
  find ${pkgdir} -name *.a -delete
  
  # Install Runtime Library Exception
  install -dm644 ${pkgdir}/usr/share/licenses/gcc-libs/
  install -m644 ${_basedir}/COPYING.RUNTIME ${pkgdir}/usr/share/licenses/gcc-libs/
}

package_gcc()
{
  pkgdesc="The GNU Compiler Collection - C and C++ frontends"
  depends=("gcc-libs=$pkgver-$pkgrel" 'binutils>=2.23' 'libmpc' 'cloog' 'ppl')
  groups=('base-devel')
  install=gcc.install
  cd ${srcdir}/gcc-build
  
  gmake -j1 DESTDIR=${pkgdir} install

  install -d $pkgdir/usr/share/gdb/auto-load/usr/lib
  mv $pkgdir{,/usr/share/gdb/auto-load}/usr/lib/libstdc++.so.6-gdb.py

  # unfortunately it is much, much easier to install the lot and clean-up the mess...
  if [[ "$CARCH" == "i686" ]]; then
      _CARCH=i386
  else
      _CARCH=x86_64
  fi
  rm $pkgdir/usr/bin/${_CARCH}-unknown-freebsd9.1-gfortran
  rm $pkgdir/usr/lib/*.so*
  rm $pkgdir/usr/lib/lib{gfortran,objc}.a
  rm $pkgdir/usr/lib/libgfortran.spec
 
  rm $pkgdir/usr/lib/gcc/${_CARCH}-unknown-freebsd9.1/${pkgver}/f951
  rm $pkgdir/usr/lib/gcc/${_CARCH}-unknown-freebsd9.1/${pkgver}/{libcaf_single,libgfortranbegin}.a
  rm $pkgdir/usr/share/info/{gfortran,libgomp,libitm,libquadmath}.info
  rm $pkgdir/usr/share/man/man1/gfortran.1

  # many packages expect this symlinks
  ln -s gcc ${pkgdir}/usr/bin/cc

# POSIX conformance launcher scripts for c89 and c99
cat > $pkgdir/usr/bin/c89 <<"EOF"
#!/bin/sh
fl="-std=c89"
for opt; do
  case "$opt" in
    -ansi|-std=c89|-std=iso9899:1990) fl="";;
    -std=*) echo "`basename $0` called with non ANSI/ISO C option $opt" >&2
	    exit 1;;
  esac
done
exec gcc $fl ${1+"$@"}
EOF

  cat > $pkgdir/usr/bin/c99 <<"EOF"
#!/bin/sh
fl="-std=c99"
for opt; do
  case "$opt" in
    -std=c99|-std=iso9899:1999) fl="";;
    -std=*) echo "`basename $0` called with non ISO C99 option $opt" >&2
	    exit 1;;
  esac
done
exec gcc $fl ${1+"$@"}
EOF

  chmod 755 $pkgdir/usr/bin/c{8,9}9

 # Install Runtime Library Exception
  install -dm644 ${pkgdir}/usr/share/licenses/gcc/
  install -m644 ${_basedir}/COPYING.RUNTIME ${pkgdir}/usr/share/licenses/gcc/

}

package_gcc-fortran()
{
  pkgdesc="Fortran front-end for GCC"
  depends=("gcc=$pkgver-$pkgrel")
  install=gcc-fortran.install

  cd ${srcdir}/gcc-build
  gmake -j1 DESTDIR=$pkgdir install-target-libgfortran
  gmake -j1 -C ${_CARCH}-unknown-freebsd9.1/libgomp DESTDIR=$pkgdir install-nodist_fincludeHEADERS
  gmake -j1 -C gcc DESTDIR=$pkgdir fortran.install-{common,man,info}
  install -dm755 $pkgdir/usr/lib/gcc/${_CARCH}-unknown-freebsd9.1/$pkgver/
  install -m755 gcc/f951 $pkgdir/usr/lib/gcc/${_CARCH}-unknown-freebsd9.1/$pkgver/

  ln -s gfortran ${pkgdir}/usr/bin/f95

  rm ${pkgdir}/usr/lib/libgfortran.so*

  # Install Runtime Library Exception
    install -dm644 ${pkgdir}/usr/share/licenses/gcc-fortran/
    install -m644 ${_basedir}/COPYING.RUNTIME ${pkgdir}/usr/share/licenses/gcc-fortran/

}

package_gcc-objc()
{
  pkgdesc="Objective-C front-end for GCC"
  depends=("gcc=$pkgver-$pkgrel")

  cd ${srcdir}/gcc-build
  gmake -j1 DESTDIR=$pkgdir install-target-libobjc
  install -dm755 $pkgdir/usr/lib/gcc/${_CARCH}-unknown-freebsd9.1/$pkgver/
  install -m755 gcc/cc1obj $pkgdir/usr/lib/gcc/${_CARCH}-unknown-freebsd9.1/$pkgver/

  # remove libraries included in gcc-libs
  rm ${pkgdir}/usr/lib/libobjc.so*

  # Install Runtime Library Exception
  install -dm644 ${pkgdir}/usr/share/licenses/gcc-obj/
  install -m644 ${_basedir}/COPYING.RUNTIME ${pkgdir}/usr/share/licenses/gcc-obj/
}
