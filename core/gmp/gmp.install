info_dir=usr/share/info

post_install() {
  [ -x usr/bin/install-info ] || return 0
    install-info ${info_dir}/gmp.info.gz ${info_dir}/dir
}

post_upgrade() {
  post_install $1
}

pre_remove() {
  [ -x usr/bin/install-info ] || return 0
    install-info --delete ${info_dir}/gmp.info.gz ${info_dir}/dir
}
