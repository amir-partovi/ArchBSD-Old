pkgname=linux-cairo
pkgver=1.10.2
pkgrel=1
pkgdesc='linux cairo'
url='http://www.archlinux.org/'
license=('GPL')
arch=('any')
depends=('linux-base' 'linux-expat' 'linux-fontconfig' 'linux-png' 'linux-xorg-libs')
options=(!strip)
source=(http://arm.konnichi.com/2011/09/05/extra/os/i686/cairo-1.10.2-2-i686.pkg.tar.xz)
md5sums=('015c4d3d33f114add77b4fc2595ac57f')

package() {
	install -dm755 "${pkgdir}/compat/linux"
	cp -Ra "${srcdir}/usr" "${pkgdir}/compat/linux"

    find ${srcdir} \
         -type f -print0 | xargs -0 file \
        | grep ELF | cut -d : -f 1 \
        | xargs brandelf -t Linux
}
