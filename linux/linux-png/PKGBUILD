pkgname=linux-png
pkgver=1.4.8
pkgrel=1
pkgdesc='linux png package'
url='http://www.archlinux.org/'
license=('GPL')
arch=('any')
options=(!strip)
source=(http://arm.konnichi.com/2011/09/05/extra/os/i686/libpng-1.4.8-1-i686.pkg.tar.xz)
md5sums=('a06f481259e492a930f2c2fbfe1547e3')

package() {
	install -dm755 "${pkgdir}/compat/linux"
	cp -Ra "${srcdir}/usr" "${pkgdir}/compat/linux"

       find ${srcdir} \
         -type f -print0 | xargs -0 file \
        | grep ELF | cut -d : -f 1 \
        | xargs brandelf -t Linux

}
