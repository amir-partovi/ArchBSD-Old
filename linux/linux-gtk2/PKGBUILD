pkgname=linux-gtk2
pkgver=2.18.3
pkgrel=1
pkgdesc='linux gtk2'
url='http://www.archlinux.org/'
license=('GPL')
arch=('any')
depends=('linux-base' 'linux-atk' 'linux-cairo' 'linux-expat' 
	'linux-fontconfig' 'linux-jpeg' 'linux-pango' 'linux-png' 
	'linux-tiff' 'linux-xorg-libs') 
options=(!strip)
install=linux-gtk2.install
source=(
	http://arm.konnichi.com/2009/12/01/extra/os/i686/gtk2-2.18.3-2-i686.pkg.tar.gz
	http://arm.konnichi.com/2009/12/01/extra/os/i686/gtk-engines-2.18.4-1-i686.pkg.tar.gz
	http://arm.konnichi.com/2009/12/01/extra/os/i686/pixman-0.16.2-1-i686.pkg.tar.gz
)
md5sums=('c22d836b27cde6da547c5b5b769e39ac'
         'b024d917e357b02bd31b27d00ab322e0'
         '8823ab1e4cd8ededa57b4f5a6c16aeac')
package() {
	install -dm755 "${pkgdir}/compat/linux"
	cp -Ra "${srcdir}/usr" "${pkgdir}/compat/linux"
        cp -Ra "${srcdir}/etc" "${pkgdir}/compat/linux"
	find ${pkgdir}/compat/linux/{bin,sbin,usr/bin,usr/sbin} -type f -print0 | xargs brandelf -t Linux
}
