pkgname=linux-desktop-file-utils
pkgver=0.18.1
pkgrel=1
pkgdesc='linux desktop-file-utils'
url='http://www.archlinux.org/'
license=('GPL')
arch=('any')
depends=('linux-base')
options=(!strip)
source=(http://arm.konnichi.com/2011/09/05/extra/os/i686/desktop-file-utils-0.18-1-i686.pkg.tar.xz)
md5sums=('7a9fdf9c6a4bcda53ac365a8b52b9f61')

package() {
	install -dm755 "${pkgdir}/compat/linux"
	cp -Ra "${srcdir}/usr" "${pkgdir}/compat/linux"

    find ${srcdir} \
         -type f -print0 | xargs -0 file \
        | grep ELF | cut -d : -f 1 \
        | xargs brandelf -t Linux
}
