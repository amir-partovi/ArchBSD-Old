pkgname=linux-openldap
pkgver=2.4.26
pkgrel=1
pkgdesc='linux openldap'
url='http://www.archlinux.org/'
license=('GPL')
arch=('any')
depends=('linux-base')
options=(!strip)
source=(http://arm.konnichi.com/2011/09/05/core/os/i686/openldap-2.4.26-3-i686.pkg.tar.xz)
md5sums=('a4578cde246f96f59b3b7fc1b7863eda')

package() {
	install -dm755 "${pkgdir}/compat/linux"
	cp -Ra "${srcdir}"/{usr,etc,var} "${pkgdir}/compat/linux"

    find ${srcdir} \
         -type f -print0 | xargs -0 file \
        | grep ELF | cut -d : -f 1 \
        | xargs brandelf -t Linux

}
