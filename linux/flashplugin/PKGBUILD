pkgname=flashplugin
pkgver=11.2.202.291
pkgrel=1
pkgdesc='linux atk package'
url='http://www.archlinux.org/'
license=('GPL')
arch=('any')
options=(!strip)
depends=('linux-base' 'linux-atk' 'linux-cairo' 'linux-expat' 
	 'linux-jpeg' 'linux-openssl' 'linux-pango' 'linux-gtk2'
	 'linux-jpeg' 'linux-png' 'linux-tiff' 'linux-openssh' 
	'linux-nspr' 'linux-nss' 'linux-openldap' 'linux-sqlite')
source=(ftp://ftp.archlinux.org/extra/os/i686/flashplugin-11.2.202.291-1-i686.pkg.tar.xz)
md5sums=('b79e822e34f423120332c302cdeae5a8')
package() {
	install -dm755 "${pkgdir}/compat/linux"
	install -dm755 "${pkgdir}/usr/lib/"
	cp -Ra "${srcdir}/usr" "${pkgdir}/compat/linux"
	cp -Ra "${srcdir}/etc" "${pkgdir}/compat/linux"
	ln -s "${pkgdir}/compat/linux/usr/lib/mozilla/plugins/libflashplayer.so"  "${pkgdir}/usr/lib/"
}
