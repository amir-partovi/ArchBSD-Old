pkgname=linux-expat
pkgver=2.0.1
pkgrel=1
pkgdesc='linux expat package'
url='http://www.archlinux.org/'
license=('GPL')
arch=('any')
depends=('linux-base')
options=(!strip)
source=(http://arm.konnichi.com/2011/09/05/core/os/i686/expat-$pkgver-6-i686.pkg.tar.xz)
md5sums=('6c459f6aeb6290bcbdb3e2b1fc5d0e9d')

package() {
	install -dm755 "${pkgdir}/compat/linux"
	cp -Ra "${srcdir}/usr" "${pkgdir}/compat/linux"

	msg "Branding elf files"
	find ${srcdir} \
           -type f -print0 | xargs -0 file \
          | grep ELF | cut -d : -f 1 \
	  | xargs brandelf -t linux
}
